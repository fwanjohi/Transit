<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FxITransit.Views.SettingsPage">
    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Alerts">
                    <SwitchCell    Text="Send Alerts" On="{Binding Path=Alerts.Alert}" />
                    <SwitchCell Text="Voice Alerts" On="{Binding Path=Alerts.Speak}" />
                    <SwitchCell Text="Vibrate" On="{Binding Path=Alerts.Vibrate}" />


                    <EntryCell Keyboard="Numeric" LabelColor ="Color.Black" HorizontalTextAlignment ="Start" Label="Alert Mins Before : " Text="{Binding Path=Alerts.AlertMinsBefore}" />
                    <EntryCell Keyboard="Numeric" LabelColor ="Color.Black" Label="Alert Interval : " HorizontalTextAlignment ="Start"  Text="{Binding Path=Alerts.AlertInterval}" />


                </TableSection>
                <TableSection Title="Favorite Routes" x:Name="FavesSection">

                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>